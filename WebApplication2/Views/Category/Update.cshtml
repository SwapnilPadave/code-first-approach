@model WebApplication2.Models.Category
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Update</h2>
<form action="/Category/Update/@Model.CategoryID" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="CategoryName">Category Name:</label>
            <input type="hidden" name="CategoryID" value="@Model.CategoryName" />
            <input type="text" class="form-control" id="CategoryName" name="CategoryName" placeholder="Category Name" value="@Model.CategoryName" />
        </div>
    </div>
        <button type="submit" class="btn btn-success">Save</button>
        <a href="/Category/index" class="btn btn-danger">Cancle</a>
</form>